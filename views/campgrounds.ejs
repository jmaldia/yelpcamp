<% include partials/header %>

    <div class="container">
        <header class="jumbotron p-5">
            <h1>Welcome to YelpCamp</h1>
            <p>View our curated camps from all around the world</p>
            <p>
                <a href="/campground/new" class="btn btn-primary btn-lg">
                    Add New Campground
                </a>
            </p>
        </header>
    
        <div class="row">
            <% campgrounds.forEach((campground) => { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campground.image %>">
                        <div class="caption">
                            <h4><%= campground.name %></h4>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
<% include partials/footer %>