<% include ../partials/header %>

    <div class="container">
        <div class="col-md-12 text-center mb-5">
            <h1>Edit <%= spot.name %></h1>
        </div>
        <div class="row">
            <div style="width: 30%; margin: 0 auto;">
                <form action="/spots/<%= spot._id%>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="spot[name]" placeholder="Spot's Name" value="<%= spot.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="spot[image]" placeholder="Image URL" value="<%= spot.image %>">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="spot[description]" placeholder="Description" rows="5"><%= spot.description %>"</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

<% include ../partials/footer %>